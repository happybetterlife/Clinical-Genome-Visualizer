# Application Settings
APP_NAME=Clinical Genome Visualizer
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-xyz123abc456

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./genome.db
REDIS_URL=redis://localhost:6379/0
ELASTICSEARCH_URL=http://localhost:9200

# External APIs
RCSB_PDB_API=https://files.rcsb.org
ALPHAFOLD_API=https://alphafold.ebi.ac.uk
CLINVAR_API=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
UNIPROT_API=https://www.uniprot.org/uniprot

# API Keys (Optional)
NCBI_API_KEY=your-ncbi-api-key
ENSEMBL_API_KEY=your-ensembl-api-key

# Storage Configuration
S3_BUCKET=genome-visualizer
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000  # MinIO for local dev

# Security & HIPAA Compliance
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENABLE_AUDIT_LOG=True
ENCRYPT_PATIENT_DATA=True
PHI_ENCRYPTION_KEY=your-phi-encryption-key

# Mol* Configuration
MOLSTAR_STREAMING_SERVER=https://maps.rcsb.org
MOLSTAR_VOLUME_SERVER=https://www.ebi.ac.uk/pdbe/volume-server
MOLSTAR_COORDINATE_SERVER=https://www.ebi.ac.uk/pdbe/coordinates
MOLSTAR_DEFAULT_PRESET=auto

# ML Model Paths
ACMG_MODEL_PATH=./models/acmg_classifier.pkl
PATHOGENICITY_MODEL_PATH=./models/pathogenicity_predictor.h5
STRUCTURE_IMPACT_MODEL_PATH=./models/structure_impact.pt

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Cache Settings
CACHE_TTL=3600  # 1 hour
STRUCTURE_CACHE_SIZE=100  # Max structures in memory
ENABLE_REDIS_CACHE=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@genome-visualizer.com

# Monitoring
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=True
GRAFANA_PORT=3000

# Feature Flags
ENABLE_ALPHAFOLD=True
ENABLE_CLINVAR=True
ENABLE_DRUG_DOCKING=True
ENABLE_MD_SIMULATION=False
ENABLE_VR_MODE=False

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]